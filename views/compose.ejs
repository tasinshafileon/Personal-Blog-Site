<%- include('partials/header'); -%>

<div class="content-holder">
  <h1><%=startingTitle%></h1>
  <form action="/compose" method="post">

    <div class="mb-3">
      <label class="form-label">Title</label>
      <input type="text" name="title" class="form-control" placeholder="Enter the title here">
    </div>
    <div class="mb-3">
      <label class="form-label">Post</label>
      <textarea class="form-control" name="content" rows="8" placeholder="Enter your post here"></textarea>
    </div>

    <button class="btn btn-primary" type="submit" name="button">Publish</button>

  </form>
</div>

<%- include('partials/footer'); -%>
